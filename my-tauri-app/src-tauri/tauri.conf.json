{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Video Analyzer",
  "version": "1.0.0",
  "identifier": "com.jhjh.videoanalyzer",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Video AI Processor",
        "width": 1200,
        "height": 800,
        "minWidth": 1000,
        "minHeight": 720,
        "resizable": true,
        "center": true
      }
    ],
    "security": { "csp": null }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "resources/installers/*",
      "resources/ollama_models/**/*"
    ],
    "windows": {
      "nsis": {
        "installerHooks": "windows/hooks.nsh"
      }
    },
    "externalBin": [
      "sidecars/ollama",
      "sidecars/ffmpeg",
      "sidecars/video_analyzer_backend/video_analyzer_backend"
    ]
  }

}
