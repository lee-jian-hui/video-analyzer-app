# Frontend Configuration (React/Vite/TypeScript)
# Copy this file to .env for local development
#
# Note: Vite requires VITE_ prefix for environment variables
# See: https://vitejs.dev/guide/env-and-mode.html

# ============================================================================
# Application Layout Configuration
# ============================================================================

# Default window width (pixels)
# Default: 1200
VITE_APP_DEFAULT_WIDTH=1200

# Default window height (pixels)
# Default: 800
VITE_APP_DEFAULT_HEIGHT=800

# Fullscreen mode breakpoint (pixels)
# When viewport width exceeds this, switch to fullscreen layout
# Default: 1400
VITE_APP_FULLSCREEN_BREAKPOINT=1400

# Container top padding (viewport height percentage)
# Default: 4
VITE_APP_CONTAINER_PADDING_TOP=4

# ============================================================================
# History Configuration
# ============================================================================

# Maximum number of chat history items to fetch
# Default: 10
VITE_APP_HISTORY_LIMIT=10

# Whether to summarize history on resume (use conversation_summary) or load full messages
# true  = use summary text as a single assistant message
# false = fetch recent_messages and render chat bubbles
# Default: true
VITE_APP_RESUME_USE_SUMMARY=true

# ============================================================================
# Development vs Production
# ============================================================================

# Development mode (handled by Vite automatically)
# - Development: npm run dev
# - Production: npm run build
#
# You can check mode in code with: import.meta.env.MODE
# - "development" when running dev server
# - "production" when building for production

# ============================================================================
# Usage Examples
# ============================================================================

# Larger window for desktop:
#   VITE_APP_DEFAULT_WIDTH=1600
#   VITE_APP_DEFAULT_HEIGHT=1000
#
# Smaller window for compact layouts:
#   VITE_APP_DEFAULT_WIDTH=1000
#   VITE_APP_DEFAULT_HEIGHT=720
#
# More history items:
#   VITE_APP_HISTORY_LIMIT=25
